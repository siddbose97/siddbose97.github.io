<!doctype html>
<html lang="en">
<head>
    <title>Siddhartha Bose</title>
    <meta name="description" content="" />

    {{>head}}
</head>

<body>
    <div class="blocks-page">
        <section class="smart-scroll">
            <div class="container-fluid" >
                <nav class="navbar navbar-expand-md navbar-light">
                    <a class="navbar-brand heading-black" href="/" style="height:10vh">
                        <img class="img-logo" src="{{{page.header.img_logo_nav}}}=s200"/>
                    </a>
                    <button class="navbar-toggler navbar-toggler-right border-0" type="button" data-toggle="collapse"
                            data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false"
                            aria-label="Toggle navigation">
                        <i class="fa fa-bars"></i>
                    </button>
                    <div class="collapse navbar-collapse mt-0" id="navbarCollapse">
                        <ul class="navbar-nav ml-auto mobile-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="/background">{{page.header.header_nav.nav0.text}}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/#projects">{{page.header.header_nav.nav1.text}}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/#skills">{{page.header.header_nav.nav2.text}}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/blog">{{page.header.header_nav.nav3.text}}</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/#contact_form">{{page.header.header_nav.nav4.text}}</a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </div>
        </section>
        
        <section style="background:url('{{{page.hero.img_background}}}=s2048');background-size:cover;background-position:center;">
            <div class="gradient-div py-3" style="height:76vh">
        
                <div class="container">
                    <div class="row justify-content-center header-row">
                        <div class="col-12 col-md-8 col-lg-7 text-center text-white">
                            <img class="mt-4" style="width:200px; border-radius:50%" src="{{{page.hero.img_profile}}}=s320-c"/>
                            <h1 class="display-3 mt-1">{{page.hero.greeting}}</h1>
                            <p class="lead text-white mb-4 mt-1"> 
                                {{page.hero.introduction}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <a id="projects">
        <section class="py-5 py-md-7">
            <div class="container py-md-5">
                <div class="row block-header">
                    <div class="col-sm-8 mx-auto text-center">
                        <h1 class="display-4 mt-2">{{page.projects.header}}</h1>
                        <hr>
                        <p class="lead">{{page.projects.subheader}}</p>
                    </div>
                </div>
                <div class="row mt-5 aos-init aos-animate" data-aos="fade-up" data-aos-duration="1000">
                    {{#projects}}
                    <div class="col-md-4 col-sm-12 mb-2r">
                        <a href="/project/{{slug}}">
                            <div class="position-relative project">
                                <div class="image position-relative ">
                                    <img src="{{{image}}}" class="img-fluid w-100ok d-block">
                                    <div class="overlay-box">
                                        <div class="overlay-inner overlay-content">
                                            <h5 class="mb-0">{{name}}</h5>
                                            <p>{{category}}</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                    {{/projects}}    
                </div>
            </div>
        </section>
        </a>
        <a id="skills">
        <section class="py-md-5 block">
            <div class="container">
                <div class="row block-header">
                    <div class="col-sm-8 mx-auto text-center">
                        <h1 class="display-4 mt-2">{{page.service.header}}</h1>
                        <hr>
                        <p class="lead">{{page.service.subheader}}</p>
                    </div>
                </div>
                <div class="row mt-5">
                    {{#services}}
                    <div class="col-md-4 service mb-5 aos-init aos-animate">
                        <img class="icon mr-4" src="{{{image}}}">
                        <div class="content">
                            <h5>{{{name}}}</h5>
                            <p>{{{description}}}</p>
                        </div>
                    </div>
                    {{/services}}

                </div>
            </div>
        </section>
        </a>
        <a id="contact_form">
        <section class="py-md-5 mb-2r mb-5">
            <div class="container">
                <div class="row">
                    <div class="col-sm-8 mx-auto text-center">
                        <h1 class="display-4 mt-2 section-title">{{page.contact.header}}</h1>
                        <p>{{page.contact.subheader}}</p>
                    </div>
                </div>
                <div class="row mt-5">
                    <div class="col-sm-6 mx-auto" data-aos="fade-left" data-aos-duration="1000">
                        <form action="" method="post">
                            <div class="form-group">
                                <input type="text" id="contact-name" class="form-control" placeholder="Name">
                            </div>
                            <div class="form-group">
                                <input type="text" id="contact-email" class="form-control" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <input type="text" id="contact-subject" class="form-control" placeholder="Subject">
                            </div>
                            <div class="form-group">
                                <textarea name="" id="contact-message" cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
                            </div>
                            <div class="form-group text-center">
                                <input type="submit" id="btn-register" class="btn btn-primary btn-send-message" value="Send Message">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        </a>

        <footer  style="background:url('https://lh3.googleusercontent.com/1U9qW1j25Tzt--WPtw1u-1hMopjAN3xYVu1gTbTPZ5-1GvcPWxN67y3CHR1336jkMgw_JCTLzyfTHMZpJZ5wEXoICIAd0p7Dur8_tg=s2048');background-size:cover;background-position:center;height:50vh">
                <div class="container pt-5 pb-5 text-black">
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <a href="/">
                                <p><img class="img-logo-footer" style="width:200px;" src="{{{page.header.img_logo_footer}}}=s440"/></p>
                            </a>
            
                                <ul class="list-inline social social-white-alt social-rounded social-sm mb-0">
                                    <li class="list-inline-item"><a href="{{{page.header.social.facebook.link}}}" target="_blank"><i class="fa fa-facebook" style="color:rgb(77, 73, 73)"></i></a></li>
                                                                        
                                    <li class="list-inline-item"><a href="{{{page.header.social.linkedin.link}}}" target="_blank"><i class="fa fa-linkedin" style="color:rgb(77, 73, 73)"></i></a></li>
                                    
                                    <li class="list-inline-item"><a href="{{{page.header.social.instagram.link}}}" target="_blank"><i class="fa fa-instagram" style="color:rgb(77, 73, 73)"></i></a></li>
                                                                        
                                    <li class="list-inline-item"><a href="{{{page.header.social.github.link}}}" target="_blank"><i class="fa fa-github" style="color:rgb(77, 73, 73)"></i></a></li>
                                    
                                </ul>
                            </div>
                        </div>
                    </div>
        </footer>

    </div>

    {{>scripts}}

    <script src="{{{cdn}}}/js/contact.js"></script>
</body>
</html>
